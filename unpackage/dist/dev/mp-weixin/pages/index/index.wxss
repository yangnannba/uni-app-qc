.swiper {
  height: 86vh;
}
.swiper .item-img {
    width: 750rpx;
    height: 420rpx;
}
.swiper .content-wrap {
    text-align: center;
    margin-top: 80rpx;
}
.swiper .content-wrap .sub_header {
      font-size: 34rpx;
      color: #777;
      text-transform: uppercase;
      letter-spacing: 6rpx;
}
.swiper .content-wrap .header {
      font-size: 60rpx;
      color: #3cc51f;
      font-weight: bold;
      line-height: 160rpx;
}
.swiper .content-wrap .description {
      color: #999;
      font-size: 40rpx;
}
.swiper .mores {
    text-align: center;
    margin-top: 100rpx;
}
.swiper .mores text {
      background: #ddd;
      color: #000;
      font-size: 32rpx;
      padding: 18rpx 26rpx;
}
.swiper .mores text:nth-child(2) {
      background: #3cc51f;
      color: #fff;
}
.vehicles {
  padding: 35rpx;
}
.vehicles-item {
  border-radius: 14rpx;
  box-shadow: 0rpx 0rpx  20rpx #ccc;
  margin-bottom: 40rpx;
}
.vehicles-item .content-wrap {
    padding: 20rpx;
    padding-bottom: 60rpx;
}
.vehicles-item .content-wrap .header {
      font-size: 48rpx;
      color: #3cc51f;
      font-weight: bold;
      line-height: 2em;
}
.vehicles-item .content-wrap .sub_header {
      font-size: 30rpx;
      color: #3cc51f;
      text-transform: uppercase;
}
.vehicles-item .content-wrap .sub_header:after {
        content: "";
        display: block;
        width: 100rpx;
        height: 4rpx;
        background: #3cc51f;
        margin-top: 10rpx;
}
.vehicles-item .content-wrap .description {
      color: #777;
      font-size: 32rpx;
      margin-top: 40rpx;
}
.vehicles-item image {
    width: 100%;
    height: 450rpx;
    border-radius: 14rpx;
    display: block;
}

