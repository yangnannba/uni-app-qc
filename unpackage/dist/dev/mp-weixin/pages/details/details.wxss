.banner {
  position: relative;
}
.banner .img {
    width: 750rpx;
    height: 496rpx;
    display: block;
}
.banner .bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    background: -webkit-linear-gradient(transparent, black);
    background: linear-gradient(transparent, black);
    width: 100%;
    color: #fff;
}
.banner .bottom .header {
      font-size: 32rpx;
      text-indent: 20rpx;
}
.banner .bottom .sub_header {
      font-size: 28rpx;
      text-indent: 20rpx;
      line-height: 50rpx;
}
.banner .bottom .price {
      position: absolute;
      right: 20rpx;
      bottom: 20rpx;
      font-size: 26rpx;
}
.detailyy {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 2rpx solid #ddd;
}
.detailyy .item {
    width: 50%;
    text-align: center;
    font-size: 32rpx;
    padding: 40rpx 0;
}
.detailyy .item text {
      font-size: 54rpx;
}
.detailyy .item:nth-child(1) {
    border-right: 2rpx solid #ddd;
}
.yuyue {
  text-align: center;
  font-size: 32rpx;
  padding: 60rpx 0;
}
.yuyue .btn {
    background: #3cc51f;
    color: #fff;
    display: inline-block;
    padding: 10rpx 20rpx;
    margin-top: 20rpx;
}

